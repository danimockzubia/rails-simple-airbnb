<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Simple Airbnb</a>
  </nav>
  <div class='container mt-3'>
      <div class='row'>
        <div class='col-12'>
          <h3>All flats (<%= @flats.size %>)</h3>
        </div>
      </div>
      <div class='row'>
          <% @flats.each do |flat| %>
          <div class="col-4">
            <div class='flat-card'>
              <div class='content-card'>
                <h4><%= flat.name %></h4>
                <p><%= flat.description %></p>
                <p><%= flat.address %></p>
                <p>$<%= flat.price_per_night %></p>
                <p><i class="fas fa-users"></i><%= flat.number_of_guests %></p>
              </div>
              <div class='button-card'>
                <%=link_to "More Info", flat_path(flat)%>
              </div>
            </div>
          </div>
          <% end %>
      </div>
  </div>
</body>
